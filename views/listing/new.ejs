<% layout('/layouts/boilerPlate')%>

    <body>
        <br>
        <div class="row ">
            <div class="col-8 offset-2">
                <h3>Creat a new Listing</h3>

                <form action="/listing" method="post" class="needs-validations " novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text " name="listing[title]" placeholder="enter title" class="form-control" required>
                        <div class="valid-feedback">The title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="" cols="30" rows="3" placeholder="description"
                            class="form-control" required></textarea>
                            <div class="invalid-feedback">Please enter the correct description</div>
                    </div>
                    
                   
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" name="listing[image]"class="form-control" required><br>

                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" id="" placeholder="enter price"
                                class="form-control" required>
                                <div class="invalid-feedback">Please enter a valid price</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" id="" placeholder="country" class="form-control" required>
                            <div class="invalid-feedback">Please enter the valid country</div>
                        </div>
                    </div>



                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" id="" placeholder="location" class="form-control" required>
                    </div>

                    <button class="btn btn-dark add-btn " type="submit">Add</button>
                    <br><br>
                </form>

            </div>
        </div>
        <script src="/js/script.js"></script>
    </body>